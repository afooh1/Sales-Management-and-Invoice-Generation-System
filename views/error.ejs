<%- include('partials/header', { title: 'Error - TechTrove' , page: '' }) %>

    <div style="text-align: center; padding: 50px 0;">
        <h1 style="color: var(--danger-color); font-size: 3rem; margin-bottom: 20px;">
            <i class="fas fa-exclamation-triangle"></i> Error
        </h1>

        <div
            style="max-width: 600px; margin: 0 auto; background: white; padding: 30px; border-radius: 5px; box-shadow: var(--shadow);">
            <h2 style="margin-bottom: 20px; color: var(--secondary-color);">
                <%= message || 'An error occurred' %>
            </h2>

            <% if (typeof error !=='undefined' && error) { %>
                <div
                    style="background-color: rgba(231, 76, 60, 0.1); padding: 15px; border-radius: 5px; margin-bottom: 20px; text-align: left;">
                    <pre
                        style="font-family: monospace; margin: 0; white-space: pre-wrap;"><%= error.stack || error %></pre>
                </div>
                <% } %>

                    <a href="javascript:history.back()" class="btn btn-warning" style="margin-right: 10px;">
                        <i class="fas fa-arrow-left"></i> Go Back
                    </a>
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-home"></i> Go to Dashboard
                    </a>
        </div>
    </div>

    <%- include('partials/footer') %>